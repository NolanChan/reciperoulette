<div class="col-md-2 contain-center">

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
		<h2>Sign up</h2>

	  <fieldset id="inputs">
		  <%= f.email_field :email, autofocus: true , placeholder: "Email", id: "email"%>

		  <%= f.password_field :password, autocomplete: "off" , placeholder: "Password (8 characters minimum)", id: "password" %>

		  <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder: "Password Confirmation", id: "password"%>
	  </fieldset>
		<fieldset id="actions">
	  		<%= f.submit "Sign up", id: "submit" %>
    </fieldset>
	<% end %>

	<%= render "devise/shared/links" %>
</div>
