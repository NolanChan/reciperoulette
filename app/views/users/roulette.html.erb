<% # pretend i gave you a recipe name called recipe_name %>

<div class="row" id="row1">
  <div class="col-md-2">
    <div id="skip">
      <button class="btn" type="button">Skip</button>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-2">

    <div id="picture">
      <%= image_tag "#{recipe_name}.jpg" %>
    </div>
  
  </div>
  <div class="col-md-2 col-md-offset-2">
    <div id="open">
      <button class="btn" type="button">View</button>
    </div>
  </div>
</div> <!-- end of row1 -->
<div class="row" id="row2">
  <div class="col-md-2 contain-center">
    <div id="block">
      <button class="btn" type="button">Block</button>
    </div>
  </div>
</div> <!-- end of row2 -->